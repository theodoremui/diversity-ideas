      "args": [
        "config/harvard-columns.yaml",
        "3",
        "3",
      ],
      "purpose": [
        "debug-in-terminal"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "1",
        "10",
        "1"
      ],
      "purpose": [
        "debug-in-terminal"
      ]
    }
  ]
}
